pipeline {
    agent any
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/singhsajal/gradient-ui-e2e-test-personal.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                script {
                    echo 'Installing dependencies...'
                    // Ensure npm or node is in the system PATH.
                    bat 'npm install'
                }
            }
        }
        stage('Install Playwright') {
            steps {
                script {
                    echo 'Installing Playwright...'
                    // Ensure this command runs on Windows.
                    bat 'npx playwright install'
                }
            }
        }
        stage('Run Tests') {
            steps {
                script {
                    echo 'Running tests...'
                    bat 'npx playwright test loginLogout.spec.js --project=chromium'
                }
            }
        }
        stage('Generate Report') {
            steps {
                script {
                    echo 'Generating report...'
                    // Add the logic for generating the report, if needed.
                    bat 'npx playwright show-report'
                }
            }
        }
    }
    post {
        always {
            echo 'Pipeline finished.'
        }
        success {
            echo 'Pipeline succeeded.'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
